ğŸ”Œ 6. INTÃ‰GRATION API
6.1 Endpoint d'inscription
typescript// app/api/signup/route.ts
import { NextRequest, NextResponse } from 'next/server';

export async function POST(request: NextRequest) {
  const body = await request.json();
  
  // Validation
  const { email, fullName, locale } = body;
  
  // Appel vers votre API WordPress existante
  const response = await fetch('https://felicloud.com/wp-json/felicloud/v1/create', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      email,
      full_name: fullName,
      form_secret: process.env.FELICLOUD_FORM_SECRET,
      recaptcha_token: body.recaptchaToken,
    }),
  });
  
  const data = await response.json();
  return NextResponse.json(data);
}
6.2 Variables d'environnement
bash# .env.local
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=6LcXXXXXXXXXXX
