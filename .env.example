# ===========================================
# FELICLOUD CONFIGURATION
# ===========================================
# IMPORTANT: Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://felicloud.com
NEXT_PUBLIC_API_URL=https://felicloud.com/api

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/felicloud
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ===========================================
# NEXTCLOUD OCS API
# ===========================================
# Your Nextcloud instance URL
NEXTCLOUD_URL=https://cloud.felicloud.com
# Admin username for API calls
NEXTCLOUD_ADMIN_USER=admin
# Admin password (or app password recommended)
NEXTCLOUD_ADMIN_PASSWORD=your_secure_password_here
# Default group for free users
NEXTCLOUD_FREE_GROUP=10GB Free

# ===========================================
# STRIPE
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs (create in Stripe Dashboard)
# Monthly Plans
STRIPE_PRICE_500GB_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_1TB_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_2TB_MONTHLY=price_xxxxxxxxxxxxx

# Annual Plans
STRIPE_PRICE_500GB_ANNUAL=price_xxxxxxxxxxxxx
STRIPE_PRICE_1TB_ANNUAL=price_xxxxxxxxxxxxx
STRIPE_PRICE_2TB_ANNUAL=price_xxxxxxxxxxxxx

# Lifetime Plans (one-time payment)
STRIPE_PRICE_500GB_LIFETIME=price_xxxxxxxxxxxxx
STRIPE_PRICE_1TB_LIFETIME=price_xxxxxxxxxxxxx
STRIPE_PRICE_2TB_LIFETIME=price_xxxxxxxxxxxxx

# ===========================================
# SMTP CONFIGURATION
# ===========================================
SMTP_HOST=smtp.felicloud.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@felicloud.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_EMAIL=noreply@felicloud.com
SMTP_FROM_NAME=Felicloud

# ===========================================
# EMAIL VERIFICATION
# ===========================================
# Token expiration time in hours
EMAIL_VERIFICATION_EXPIRY_HOURS=24
# Base URL for verification links
EMAIL_VERIFICATION_URL=https://felicloud.com/api/auth/verify-email

# ===========================================
# SECURITY
# ===========================================
# Secret for JWT tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your_very_secure_jwt_secret_here_min_32_chars
# Secret for session encryption
SESSION_SECRET=your_very_secure_session_secret_here_min_32_chars
# Rate limiting
RATE_LIMIT_SIGNUP_PER_HOUR=3
RATE_LIMIT_SIGNUP_PER_IP=3

# ===========================================
# REDIS (for sessions and caching)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Optional: Sentry for error tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
FEATURE_FREE_SIGNUP=true
FEATURE_PAID_PLANS=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_ADMIN_DASHBOARD=false
